<div class="container">
<img class="img-fluid" src="http://www.craftlakewood.com/images/slideshow/craft-slide.jpg">

<h1>Eat-Da-Burger</h1>

<div class="row">
<div class= "col-4">
<h2>TO BE EATEN:</h2>
<ul>
  {{#each burgers}}
      {{#unless eaten}}
    {{> burger-block devour=false}}
        {{/unless}}
  {{/each}}
</ul>
</div>
<div class= "col-4"></div>
<div class= "col-4">
<h2>DEVOURED!</h2>
<ul>
  {{#each burgers}}
      {{#if eaten}}
    {{> burger-block devour=true}}
        {{/if}}
  {{/each}}
</ul>
</div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button class = "btn btn-primary" type="submit">Add Burger</button>
  </div>

</form>
</div>
